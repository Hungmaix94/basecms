# .env
# Database variables (used by docker-compose for Postgres)
DATABASE_NAME=basecms
DATABASE_USER=basecms
DATABASE_PASSWORD=adminAa@123

# Strapi variables
# These will be accessed by the Strapi container
# Ensure these match the postgres service environment variables or your custom values
DB_CLIENT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=${DATABASE_NAME}
DB_USERNAME=${DATABASE_USER}
DB_PASSWORD=${DATABASE_PASSWORD}
# Generate these secrets for production
ADMIN_JWT_SECRET=changeme_admin_jwt_secret
API_TOKEN_SALT=changeme_api_token_salt
APP_KEYS=changeme_app_keys_1,changeme_app_keys_2
JWT_SECRET=changeme_jwt_secret

# Next.js variables
# These will be accessed by the Next.js container
NEXT_PUBLIC_API_URL=http://localhost:1337 # For local development outside docker network, use localhost
NEXTAUTH_URL=http://localhost:3000

# MinIO Variables
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Strapi S3 Upload Provider Variables (using MinIO)
S3_ACCESS_KEY_ID=minioadmin
S3_ACCESS_SECRET=minioadmin
S3_BUCKET=strapi-uploads
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true